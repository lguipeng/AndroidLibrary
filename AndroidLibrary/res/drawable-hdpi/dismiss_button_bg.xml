<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
   <item android:state_pressed="false">
       <shape android:shape="rectangle">
           <corners android:radius="5dp"/>
           <gradient android:startColor="@color/button_normal" android:angle="270"
               android:endColor="@color/button_normal"/>
       </shape>
   </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <gradient android:startColor="@color/button_pressed" android:angle="270"
                android:endColor="@color/button_pressed"/>
        </shape>
    </item>
</selector>